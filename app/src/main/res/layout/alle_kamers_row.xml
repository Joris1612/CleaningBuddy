<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:theme="@style/Theme.AppCompat"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/alleKamersRow_id_tf_id"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/alleKamersRow_taak_tf_id"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/alleKamersRow_aantalTaken_tf_id"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/alleKamers_verwijderen_btn_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/trashcan_icon" />

    <ImageView
        android:id="@+id/alleKamersRow_aanpassen_btn_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/check_icon" />

    <ImageView
        android:id="@+id/alleKamersRow_alleTaken_btn_id"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_clipboard" />
</LinearLayout>