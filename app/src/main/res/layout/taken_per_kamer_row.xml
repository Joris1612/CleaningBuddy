<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/takenPerKamerRow_verwijderen_btn_id"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/trashcan_icon" />

    <TextView
        android:id="@+id/takenPerKamerRow_taak_tf_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/takenPerKamerRow_gebruiker_tf_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/takenPerKamerRow_kamer_tf_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:text="TextView" />

</LinearLayout>